{
  "name": "@rockts-org/react-ui-components",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "homepage": "/",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@craco/craco": "^6.3.0",
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^12.1.10",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "global": "^4.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "craco:start": "craco start",
    "craco:build": "craco build",
    "clean": "rimraf dist && rimraf craco",
    "prebuild": "yarn clean && craco build",
    "build": "./node_modules/.bin/tsc --build --clean && ./node_modules/.bin/tsc --noEmit false",
    "postbuild": "cp -r src/assets dist/assets && mv craco/static/css/*.css dist/tailwind.css && rimraf craco",
    "test": "craco test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/client-api": "^6.3.12",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@storybook/testing-react": "^0.0.22",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "autoprefixer": "^9.8.7",
    "babel-jest": "^27.2.5",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "jest-dom": "^4.0.0",
    "jest-junit": "^12.2.0",
    "jest-mock-extended": "^1.0.18",
    "postcss": "^7.0.38",
    "prettier": "^2.3.2",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^17.0.2",
    "storybook-dark-mode": "^1.0.8",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.16",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5"
  }
}
